{% extends 'layouts/base.html.twig' %}

{% block title %}Find all the pins on earth!{% endblock %}

{% block body %}
<h1>{{ pluralize(pins|length, 'Pin', 'Pins') }}</h1>
{% for pin in pins %}
<article>
    <h2><a href="{{ path('app_pins_show', {'id': pin.id}) }}">{{ pin.title() }}</a></h2>
    <p>{{ pin.description|u.truncate(10, '...', true) }}</p>
    <p>Submited {{ pin.createdAt|ago }}</p>
</article>

{% endfor %}

{% endblock %}